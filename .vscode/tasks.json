{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceRoot}",
		"env": {
			"PROF_EXEC": "gprof",
			"PROF_ANALYSIS_FILE": "profiler_analysis.stats"
		}
	},
	"windows": {
		"options": {
			"env": {
				"Path": "${config:terminal.integrated.env.windows.Path}",
				"NAME": "${workspaceRootFolderName}.exe",
				"MAKE_EXEC": "mingw32-make",
			}
		}
	},
	"linux": {
		"options": {
			"env": {
				"PATH": "${config:terminal.integrated.env.linux.PATH}",
				"NAME": "${workspaceRootFolderName}",
				"MAKE_EXEC": "make"
			}
		}
	},
	"osx": {
		"options": {
			"env": {
				"PATH": "${config:terminal.integrated.env.osx.PATH}",
				"NAME": "${workspaceRootFolderName}",
				"MAKE_EXEC": "make"
			}
		}
	},
	"presentation": {
		"echo": false,
		"reveal": "always",
		"focus": true,
		"panel": "shared",
		"clear": false,
		"showReuseMessage": true
	},
	"tasks": [
		{
			"label": "Build & Run: Release",
			"command": "bash ./build.sh buildrun Release",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
		},
		{
			"label": "Build: Release",
			"command": "bash ./build.sh build Release",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Run: Release",
			"command": "bash ./build.sh run Release",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Rebuild: Release",
			"command": "bash ./build.sh rebuild Release",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build & Run: Debug",
			"command": "bash ./build.sh buildrun Debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build: Debug",
			"command": "bash ./build.sh build Debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Run: Debug",
			"command": "bash ./build.sh run Debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Rebuild: Debug",
			"command": "bash ./build.sh rebuild Debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Profile: Debug",
			"command": "bash ./build.sh profile Debug",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build: Production",
			"command": "bash ./build.sh buildprod Release",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}