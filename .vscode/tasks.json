{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceRoot}",
		"env": {
			"SOURCE_FILES": "Main.cpp",
			"PROJECT_DIRS": "",
			"LIB_DIRS": "",
			"INCLUDE_DIRS": "",
			"LINK_LIBRARIES": "",
			"FLAGS_RELEASE": "",
			"FLAGS_DEBUG": ""
		}
	},
	"windows": {
		"options": {
			"env": {
				"GCC_VERSION": "7.3.0",
				"SFML_DIR": "C:/SFML-2.5.0",
				"NAME": "${workspaceRootFolderName}.exe",
				"CC": "i686-w64-mingw32-g++.exe",
				"CFLAGS": "-Os -Wfatal-errors -Wunreachable-code -Wextra -Wall -std=c++14 -fdiagnostics-color=never",
				"RC": "windres.exe",
				"MAKE_EXEC": "mingw32-make",
				"FLAGS_RELEASE": "-mwindows"
			}
		}
	},
	"linux": {
		"options": {
			"env": {
				"GCC_VERSION": "7.3.0",
				"SFML_DIR": "/usr/local",
				"NAME": "${workspaceRootFolderName}",
				"CC": "g++",
				"MAKE_EXEC": "make"
			}
		}
	},
	"presentation": {
		"echo": false,
		"reveal": "always",
		"focus": true,
		"panel": "shared"
	},
	"tasks": [
		{
			"label": "Build & Run: Release",
			"command": "tput setaf 4; if ${MAKE_EXEC}; then (tput setaf 2; tput bold; echo \"=== Build Succeeded: Launching ${NAME} ===\"; tput sgr0; bin/Release/${NAME}) else (tput setaf 1; tput bold; echo \"=== Build Failed: Review the compile errors above ===\"; tput sgr0) fi",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [],
		},
		{
			"label": "Build: Release",
			"command": "tput setaf 4; if ${MAKE_EXEC}; then (tput setaf 2; tput bold; echo \"=== Build Succeeded ===\") else (tput setaf 1; tput bold; echo \"=== Build Failed: Review the compile errors above ===\") fi; tput sgr0",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Run: Release",
			"command": "bin/Release/${NAME}",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Rebuild: Release",
			"command": "tput setaf 4; if ${MAKE_EXEC} rebuild; then (tput setaf 2; tput bold; echo \"=== Build Succeeded ===\") else (tput setaf 1; tput bold; echo \"=== Build Failed: Review the compile errors above ===\") fi; tput sgr0",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build & Run: Debug",
			"command": "tput setaf 4; if ${MAKE_EXEC} BUILD=Debug; then (tput setaf 2; tput bold; echo \"=== Build Succeeded: Launching ${NAME} ===\"; tput sgr0; bin/Debug/${NAME}) else (tput setaf 1; tput bold; echo \"=== Build Failed: Review the compile errors above ===\"; tput sgr0) fi",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Build: Debug",
			"command": "tput setaf 4; if ${MAKE_EXEC} BUILD=Debug; then (tput setaf 2; tput bold; echo \"=== Build Succeeded ===\") else (tput setaf 1; tput bold; echo \"=== Build Failed: Review the compile errors above ===\") fi; tput sgr0",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Run: Debug",
			"command": "bin/Debug/${NAME}",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Rebuild: Debug",
			"command": "tput setaf 4; if ${MAKE_EXEC} rebuild BUILD=Debug; then (tput setaf 2; tput bold; echo \"=== Build Succeeded ===\") else (tput setaf 1; tput bold; echo \"=== Build Failed: Review the compile errors above ===\") fi; tput sgr0",
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}